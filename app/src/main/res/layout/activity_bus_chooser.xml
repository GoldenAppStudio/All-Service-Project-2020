<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BusChooserActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose Starting Place &amp; Destination below"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#333"
        android:layout_marginTop="25dp"
        android:id="@+id/text_review"/>

    <TextView
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Starting place"
        android:textSize="14sp"
        android:textStyle="italic"
        android:textColor="#333"
        android:layout_marginTop="35dp"/>

    <Spinner
        android:id="@+id/spb"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:entries="@array/country_state"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:theme="@style/SpinKitView.Large.Circle"
        android:textColor="#000"
        android:layout_marginStart="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
    </Spinner>

    <TextView
        android:layout_marginStart="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        android:id="@+id/db0"
        android:textColor="#333"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/db"
        android:background="@drawable/edittext_background"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:textColor="#000"
        android:visibility="gone"
        android:theme="@style/SpinKitView.Large.Circle"
        android:layout_marginStart="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
    </Spinner>

    <Button
        android:background="@drawable/gradient_button_main"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:id="@+id/sbb"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"/>

    <Button
        android:background="@drawable/gradient_button_main"
        android:textColor="#fff"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:id="@+id/sb"
        android:visibility="invisible"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"/>


</LinearLayout>