<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoldenAppStudio">

    <!-- TODO: add GoldenApp Studio Corporation logo -->

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/company_logo"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/company_name"
        android:layout_centerHorizontal="true"
        android:src="@drawable/company" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/company_name"
        android:text="GoldenApp Studio" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAlignment="center"
        android:id="@+id/comapny_des"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/company_name"
        android:layout_centerHorizontal="true"
        android:textColor="#777"
        android:lineSpacingExtra="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/company_about" />

    <Button
        android:background="@color/sky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_website"
        android:textColor="#fff"
        android:padding="5dp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/comapny_des"
        android:text="Go to official website"/>


</RelativeLayout>