<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".BusFull">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/showImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/bus" />

            <TextView
                android:id="@+id/nameF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="53dp"
                android:layout_toEndOf="@+id/showImage"
                android:text="---------------"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fairF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameF"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="39dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="52dp"
                android:layout_toEndOf="@+id/showImage"
                android:text="--------------"
                android:textAlignment="center"
                android:textColor="#c00"
                android:textSize="14sp" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginTop="8dp"
            android:background="#000" />


        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Timing"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/timeF"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:text="------------------------"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Departure :"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/from"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-----------------"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Destination :"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/destination"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-----------------"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a00b00bbbdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Driver's name :"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp"
                android:textStyle="bold|italic"/>

            <TextView
                android:id="@+id/dname"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-----------------"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a000b00bbbdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Driver's number :"
                android:textStyle="bold|italic"
                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dno"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="-----------"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a00b0000bbbdc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Conductor's name :"
                android:textStyle="bold|italic"

                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cname"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:text="------------------------"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/a00b0000bbbdcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Conductor's number :"
                android:textStyle="bold|italic"

                android:layout_marginStart="15dp"
                android:textAlignment="center"
                android:textColor="#666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cno"
                android:layout_marginEnd="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:text="------------------------"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>