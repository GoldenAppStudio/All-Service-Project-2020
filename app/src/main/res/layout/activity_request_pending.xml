<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestPending">

    <!-- TODO: add GoldenApp Studio Corporation logo -->

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/pending_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pending" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:textColor="#000"
        android:id="@+id/pending_text"
        android:text="Your request has been sent to Admin\nPlease wait until the Admin accept your request and let you threw." />

    <Button
        android:background="@color/sky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pending_button"
        android:textColor="#fff"
        android:padding="5dp"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pending_text"
        android:text="Explore app for now"/>


</RelativeLayout>